<% content_for :title do 'Password Confirmation' end %>


<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%=@home.title%>'s Password</span>

        <%= form_for(@password_confirmation  , :method => :post , :url => password_confirmation_post_path(:home_id => @home.id) ) do |f| %>

          <div class="input-field">
            <%= f.label 'Room Password' %><br />
            <%= f.text_field :password, autofocus: true %>
          </div>

          <div class="input-field">
            <%= f.button 'Confirmation', :type => :submit , :class => 'waves-effect waves-light btn-large' %>
          </div>

        <% end %>  
      </div>
      <div class="card-action">
        <a href="#">This is a link</a>
        <a href='#'>This is a link</a>
      </div>
    </div>
  </div>
</div>
      